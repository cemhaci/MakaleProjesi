@model Kullanici
@{
    ViewBag.Title = "profildegistir";
}

<h2>profildegistir</h2>

<div class="container" style="margin-top:300px">
    <div class="row">
        <div class="row">
            @using (Html.BeginForm("profildegistir","home",FormMethod.Post,new{enctype="multipart/form-data" }))     

@*post işlemimzde resim dosyasını göndermek için bunu yazdık*@
            {
                <div class="col-md-3">
                    <img src="~/image/@Model.profilresim" class="img-circle" width="100" height="100" />
                    <br />
                    <input type="file" name="profilresmi" id="profilresmi" class="form-control" />
                </div>
                <div class="col-md-9">
                    @Html.ValidationSummary(false)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Ad, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Ad, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Soyad, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Soyad, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.KullaniciAd, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.KullaniciAd, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Sifre, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Sifre, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="kaydet" class="btn btn-success" />
                        @Html.ActionLink("iptal","profilgoster","home",new{@class="btn btn-success" })
                    </div>
                </div>
            }
        </div>
    </div>

</div>
