@model Kullanici
@{
    ViewBag.Title = "profiliniz";
}

<h2>PROFİLİNİZ</h2>
<div class="container" style="margin-top:300px">
    <div class="row">
        <div class="row">
            <div class="col-md-4">
                <img src="~/image/@Model.profilresim" class="img-circle" width="100" height="100" />
            </div>
            <div class="col-md-4">
                <h3>@(Model.Ad+" "+Model.Soyad)</h3>
                <br />
                <h4><b>Kullanıcı Adı</b>@Model.KullaniciAd</h4>
            </div>
            <div class="col-md-4">
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        seçenekler
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <li><a href="/home/profildegistir">Action</a></li>
                        @*<li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="#">Separated link</a></li>*@
                    </ul>
                </div>
            </div>

        </div>
    </div>
   
</div>
