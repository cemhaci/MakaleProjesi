@using Makale_Entity.ViewModel
@model KayitModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<link href="~/Content/StyleSheetlogin.css" rel="stylesheet" />
<script src="~/Scripts/popper.min.js"></script>
<head>
    <title>Login Page</title>
    <link href="~/Content/StyleSheetlogin.css" rel="stylesheet" />
    <link href="~/Content/shop-homepage.css" rel="stylesheet" />
    <!--Made with love by Mutiullah Samim -->
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>
<body>
    <div class="container" style="align-content:center;">
        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">

                    <h3>Sign In</h3>
                    <div class="d-flex justify-content-end social_icon">
                        <span><i class="fab fa-facebook-square"></i></span>
                        <span><i class="fab fa-google-plus-square"></i></span>
                        <span><i class="fab fa-twitter-square"></i></span>
                    </div>
                </div>
                <div style="color:red;">
                    @Html.ValidationSummary(false)
                </div>
                <div class="card-body">
                    <form action="" method="post" style="height:auto">
                        @*methodun post olmassı belirtmemiz url de kullanınıcı bilgilerinin yazmamasını sağlayacaktır*@

                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            @*<input type="text" class="form-control" placeholder="username">*@
                            @Html.TextBoxFor(x => x.kullaniciad, new { @class = "form-control", placeholder = "kullanıcı adınız" })
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            @*<input type="password" class="form-control" placeholder="password">*@
                            @Html.TextBoxFor(x => x.sifre, new { @class = "form-control", placeholder = "şifreniz" })
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            @*<input type="password" class="form-control" placeholder="password">*@
                            @Html.TextBoxFor(x => x.sifre2, new { @class = "form-control", placeholder = "şifreniz" })
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>
                            @Html.TextBoxFor(x => x.email, new { @class = "form-control", placeholder = "şifreniz" })
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn float-right login_btn">
                        </div>
                    </form>
                </div>
         
            </div>
        </div>
    </div>
</body>
<script>
    $(function () { $("footer").parent().hide() });
</script>