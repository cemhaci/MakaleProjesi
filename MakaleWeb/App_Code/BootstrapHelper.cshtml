@helper LinkButton(string url = "", string id = "", string name = "", string color = "", string css = "", string icon = "")
{
    <a href="@url" id="@id" name="@name" class="btn btn-@color @css"><span class="glyphicon glyphicon-@icon"></span></a>
}

@helper LinkButton(string url = "", string color = "", string css = "",string font="", string icon = "")
{
<font title="@font"><a href="@url" class="btn btn-@color @css"><span class="glyphicon glyphicon-@icon"></span></a></font>
}
@*aynı isimde ama parametreleri farklı birden çok helper yazabiliriz*@

@helper Button(string type = "", string text = "", string color = "", string css = "", string icon = "")
{
    <button type="@type" class="btn btn-@color @css"> <span class="glyphicon glyphicon-@icon"></span>@text</button>
}

@helper ModalPoppup(string id,string title)
{
    <style>
        #shadow {
            margin: auto;
            margin-top: 50px;
            box-shadow: 20px 20px 50px grey;
        }
        .background {
            background: rgb(21 22 62 / 0.59);
        }
        
    </style>
    <div class="modal fade background" id="@id" name="@id" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document" id="shadow">
            <div class="modal-content">
                <div class="modal-header" id="@(id+"_header")">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">@title</h4>
                </div>
                <div class="modal-body" id="@(id+"_body")">


                </div>
                
                <div class="modal-footer" id="@(id+"_footer")">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
}